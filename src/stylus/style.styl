@import 'fonts.styl'
*
  margin: 0
  padding: 0
  box-sizing: border-box
  outline: 0
body
  font-family: "Open Sans"
.wrapper
  max-width: 1264px
  display: flex
  justify-content: space-between
  margin: 0 auto
.header
  width: 100%
  &__wrap
    display: flex
    justify-content: center
    align-items: center
  &__logo
    margin-right: 45px
  &__phone
    margin-right: 45px
    font-size: 20px
    text-transform: uppercase
  &__recontrain
    margin-right: 45px
    color: #000
    border-bottom: 1px dashed #000;
    text-decoration: none
    transition: .5s
    &:hover
      border-color: transparent
  &__logo-marathon
    margin-right: 45px
  &__time
      color: #00bcd9
      font-size: 30px
      font-weight: 600
      font-style: italic
      text-transform: uppercase
      position: relative
      display: inline-block
      margin 0 5px
      font-size: 30px
      &:after
        content: attr(data-text)
        position: absolute
        top: 80%
        right: 0
        font-size 10px

.menu
  background-color: #000
  &__wrap
    display: flex
  &__item
    display: flex
    align-items: center
    margin: 15px
  &__zipper
    margin-right: 5px
  &__link
    text-decoration: none
    color: #fff
    text-transform: uppercase
    transition: .5s
    &:hover
      color: #00bcd9
  &__question
    padding: 0 15px
    border-right: 1px solid #fff
    border-left: 1px solid #fff

.title
  color: #000
  font-size: 40px
  font-weight: 600
  text-transform: uppercase
  text-align: center
  margin-top: 70px

.sport-menu
  display: flex
  justify-content: center
  align-items: center
  margin-top: 50px
  &__item
    padding: 0 10px
  &__link
    color: #000
    text-decoration: none
    transition: .5s
    border-bottom: 1px solid transparent
    &:hover
      color: #00bcd9
      border-bottom: 1px solid #00bcd9

.half-maraphon
  display: flex
  justify-content: space-between
  margin-top: 45px
  &__wrap
    display: flex
    justify-content: center
    flex-wrap: wrap
    align-content: center
  &__image
    position relative
    margin 10px
    width: calc(50% - 20px)
    & img
      width 100%
  &__text
    position absolute
    top: 30px
    left: 40px
    font-size: 30px
    font-weight: 600
    line-height: 45px
    text-transform: uppercase
    color: #000
    background-color: #fff
    padding: 0 10px
  &__text1
    position absolute
    top: 84px
    left: 40px
    font-size: 30px
    font-weight: 600
    line-height: 45px
    text-transform: uppercase
    color: #000
    background-color: #fff
    padding: 0 10px
.seemore
  display: flex
  justify-content: center
  align-items: center
  &__img
    margin-right: 15px
  &__title
    font-size: 18px
    text-transform: uppercase
    margin-top: 50px
    margin-bottom: 52px
    text-decoration: none
    color: #000
    font-weight: 600
    transition: .5s
    &:hover
      color: #00bcd9

.training
  margin-top: 70px
  &__title
    color: #000000
    font-size: 40px
    font-weight: 600
    text-align: center
    text-transform: uppercase
    margin-bottom: 30px
  &__discription
    margin: 0 auto
    text-align: center
    color: #000000
    font-size: 18px
    max-width: 1264px
    display: flex
  &__menu
    display: flex
    align-items: center
    justify-content: center
    margin-top: 46px
  &__button
    display: flex
    align-items: center
    justify-content: center
    background-color: #000
    transition: .5s
    text-decoration: none
    width: 240px;
    height: 65px;
    margin: 10px
    &:hover
      background-color: #00bcd9
  &__image
    border-right: 1px solid #fff
    padding-right: 12px
  &__text
    color: #fff
    padding: 0 24px
    text-transform: uppercase

.programs
  display: flex
  justify-content: space-between
  &__image-wrap
    display: flex
    flex-wrap: wrap
  &__image
    position relative
    margin 10px
    width: calc(50% - 20px)
    & img
      width 100%
  &__image-absolute
    position: absolute
    top: 34px
    right: 50px
