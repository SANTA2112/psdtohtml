@import 'fonts.styl'
*
  margin: 0
  padding: 0
  box-sizing: border-box
  outline: 0
body
  font-family: "Open Sans"
.top
	position: fixed
	bottom: 20px
	right: 20px
	width: 50px
	height: 50px
	border-radius: 100%
	cursor: pointer
	background-color: #fff
	text-align: center
	opacity: 0.4
	color: #414e5b
	transition: .5s
	z-index: 5
	.fa
		font-size: 32px
		margin-top: 7px
	&:hover
		opacity: 1
		background-color: #00bcd9
.wrapper
  max-width: 1264px
  display: flex
  justify-content: space-between
  margin: 0 auto
.header
  width: 100%
  &__wrap
    display: flex
    justify-content: center
    align-items: center
  &__logo
    margin-right: 45px
  &__phone
    margin-right: 45px
    font-size: 20px
    text-transform: uppercase
  &__recontrain
    margin-right: 45px
    color: #000
    border-bottom: 1px dashed #000;
    text-decoration: none
    transition: .5s
    &:hover
      border-color: transparent
  &__logo-marathon
    margin-right: 45px
  &__time
      color: #00bcd9
      font-size: 30px
      font-weight: 600
      font-style: italic
      text-transform: uppercase
      position: relative
      display: inline-block
      margin 0 5px
      font-size: 30px
      &:after
        content: attr(data-text)
        position: absolute
        top: 80%
        right: 0
        font-size 10px

.menu
  background-color: #000
  &__wrap
    display: flex
  &__item
    display: flex
    align-items: center
    margin: 15px
  &__zipper
    margin-right: 5px
  &__link
    text-decoration: none
    color: #fff
    text-transform: uppercase
    transition: .5s
    &:hover
      color: #00bcd9
  &__question
    padding: 0 15px
    border-right: 1px solid #fff
    border-left: 1px solid #fff

.title
  color: #000
  font-size: 40px
  font-weight: 600
  text-transform: uppercase
  text-align: center
  margin-top: 70px

.sport-menu
  display: flex
  justify-content: center
  align-items: center
  margin-top: 50px
  &__item
    padding: 0 10px
  &__link
    color: #000
    text-decoration: none
    transition: .5s
    border-bottom: 1px solid transparent
    &:hover
      color: #00bcd9
      border-bottom: 1px solid #00bcd9

.half-maraphon
  display: flex
  justify-content: space-between
  margin-top: 45px
  &__wrap
    display: flex
    justify-content: center
    flex-wrap: wrap
    align-content: center
  &__image
    position relative
    margin 10px
    width: calc(50% - 20px)
    & img
      width 100%
  &__text
    position absolute
    top: 30px
    left: 40px
    font-size: 30px
    font-weight: 600
    line-height: 45px
    text-transform: uppercase
    color: #000
    background-color: #fff
    padding: 0 10px
  &__text1
    position absolute
    top: 84px
    left: 40px
    font-size: 30px
    font-weight: 600
    line-height: 45px
    text-transform: uppercase
    color: #000
    background-color: #fff
    padding: 0 10px
.seemore
  display: flex
  justify-content: center
  align-items: center
  &__img
    margin-right: 15px
  &__title
    font-size: 18px
    text-transform: uppercase
    margin-top: 50px
    margin-bottom: 52px
    text-decoration: none
    color: #000
    font-weight: 600
    transition: .5s
    &:hover
      color: #00bcd9

.training
  margin-top: 70px
  &__title
    color: #000000
    font-size: 40px
    font-weight: 600
    text-align: center
    text-transform: uppercase
    margin-bottom: 30px
  &__discription
    margin: 0 auto
    text-align: center
    color: #000000
    font-size: 18px
    max-width: 1264px
    display: flex
  &__menu
    display: flex
    align-items: center
    justify-content: center
    margin-top: 46px
  &__button
    display: flex
    align-items: center
    justify-content: center
    background-color: #000
    transition: .5s
    text-decoration: none
    width: 240px;
    height: 65px;
    margin: 10px
    &:hover
      background-color: #00bcd9
  &__image
    border-right: 1px solid #fff
    padding-right: 12px
  &__text
    color: #fff
    padding: 0 24px
    text-transform: uppercase

.programs
  display: flex
  justify-content: space-between
  &__image-wrap
    display: flex
    flex-wrap: wrap
  &__image
    position relative
    margin 5px
    width: calc(50% - 10px)
    &_before-after
      &:before
        content: ""
        background: url(/img/8-1.png) no-repeat bottom left
        position: absolute
        width: 100%
        height: 100%
      &:after
        content: ""
        background: url(/img/10.png) no-repeat
        position: absolute
        bottom: 5px
        left: 335px
        width: 302px
        height: 502px
    & img
      width 100%
  &__image-shadow
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 99%
      background: linear-gradient(to right, rgba(0,0,0,0.6), rgba(0,0,0,0.0));
  &__image-absolute
    position: absolute
    top: 34px
    left: 50px
    color: #ffffff
    &_col
      color: #000000
  &__image-header
    font-size: 25px
    font-weight: 700
    text-transform: uppercase
    &_wid
      max-width: 296px
  &__image-text
    font-size: 17px
    font-weight: 600
    margin-top: 24px
  &__image-text2
    font-size: 15px
    font-weight: 300
    margin-top: 40px
    max-width: 352px
    &_tw
      max-width: 268px
  &__image-buttons
    display: flex
  &__image-ul
    font-size: 15px
    font-weight: 300
    list-style: none
    margin-top: 44px
  &__image-button
    display: flex
    align-items: center
    justify-content: center
    transition: .5s
    width: 165px
    height: 45px
    background-color: #00bcd9
    margin-top: 36px
    z-index: 1
    &_col
      background-color: transparent
      border: 1px solid #000000
      margin-right: 16px
  &__image-link
    text-decoration: none
    color: #fff
    text-transform: uppercase
    transition: .5sf
    &:hover
      color: #000000
    &_col
      color: #000000
      &:hover
        color:#00bcd9
.map
  width 100%
  height 246px
  position relative
  background: url(/img/map.jpg) center
  display: flex
  justify-content: center
  align-items: center
  &__image-shadow
    width 100%
    height 100%
    position absolute
    top 0
    left: 0
    background-color: rgba(0,0,0,.3)
  &__button
    width: 232px
    height: 45px
    background-color: #ffffff
    display flex
    justify-content: center
    align-items: center
    z-index: 2
    transition: .5s ease-in-out
    &:hover
      background-color: #00bcd9
    & a
      color: #000000
      font-size: 14px
      font-weight: 600
      line-height: 21px
      text-transform: uppercase
      letter-spacing: 0.42px
      text-decoration: none

.reviews-header
  color: #000000
  text-transform uppercase
  margin: 70px 0
  text-align: center
  font-size: 40px
  font-weight: 600
.reviews-container
  display: flex
  align-items: center
  margin 0 0 110px
.reviews-wrapper
  max-width: 1264px
  display: flex
  margin: 0 auto
  flex-direction: column
.reviews
  width 100%
  &__left
    display: flex
    align-items: center
  &__text
    display: flex
    flex-direction: column
    margin: 0 70px
  &__img-header
    font-size: 23px
    font-weight: 600
  &__img-text1
    font-size: 15px
    margin: 10px 0 20px
    font-style: italic
  &__img-text2
    margin-bottom: 25px
  &__right
    position relative
    display: flex
    &:before
      content: ''
      background: url(/img/treangl.png) top left
      width: 37px
      height: 40px
    &:after
      content: ''
      position absolute
      bottom: -32px
      right: 26px
      background: url(/img/cav.png)
      width: 73px
      height: 63px
    &_clear
      &:before
        content: ''
        background-size: 0
      &:after
        content: ''
        background-size: 0
  &__img-text3
    font-size: 15px
    font-style: italic
    position absolute
    top 0
    left: 60px
    padding 30px

.footer
  background: url(/img/footer-bg.png) top center/contain no-repeat
  height: 872px
  display: flex
  flex-direction: column
  justify-content: space-around
  align-items: center
  &__img-block
    display: flex
    justify-content: center
    align-items: center
  &__partners-images
    display: flex
    justify-content: space-between
    align-items: center
  &__partners-logo
    width 200px
    height 50px
  &__discreption
    background: #000000
    opacity: .8
    display: flex
    justify-content: space-between
    align-items center
  &__discreption-left
    display: flex
    justify-content: space-around
    padding 0 38px
  &__discreption-right
    background: url(/img/footer-img-right.jpg)
    width: 309px
    height: 395px
    padding: 38px
  &__menu
    color: #ffffff
    margin-right: 70px
  &__contacts
    color: #ffffff
    margin-right: 70px
